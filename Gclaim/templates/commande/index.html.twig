{% extends 'back.html.twig' %}

{% block title %}Commande{% endblock %}

{% block content %}

    <h1>Liste des commandes</h1>
<div class="row">
                    <div class="col-sm-4 col-md-8 text-center"><a href="{{ path('top') }}">
<button type="button" class="btn btn-block btn-info">Top Cart</button></a>
</div>
<div class="col-sm-4 col-md-8 text-center"><a href="{{ path('least') }}">
<button type="button" class="btn btn-block btn-info">Least Cart</button></a>
  </div>
  </div>
    <table class="table">
        <thead>
            <tr>
               
                <th>User Name</th>
                <th>Total</th>
                <th>DateAchat</th>
                <th>Livrer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                
                <td>{{ commande.User.username }}</td>
                <td>{{ commande.total }}</td>
                <td>{{ commande.dateAchat ? commande.dateAchat|date('Y-m-d') : '' }}</td>
                <td>{{ commande.livrer ? 'Yes' : 'No' }}</td>
                <td>

                    <div class="row">
                    <div class="col-sm-4 col-md-8 text-center">
                    <a href="{{ path('commande_show', {'id': commande.id}) }}"><button type="button" class="btn btn-block btn-primary"><i class="fas fa-download">Details</i></button></a>
                    </div>
                    </div>
                      <div class="row">
                    <div class="col-sm-4 col-md-8 text-center">
                    <a href="{{ path('commande_edit', {'id': commande.id}) }}"><button type="button" class="btn btn-info btn-block"><i class="fa fa-edit"></i>Update Status</button></a>
                   </div>
                   </div>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
         
        </tbody>
    </table>
{{ knp_pagination_render(commandes) }}

    <a href="{{ path('commande_new') }}"><button type="button" class="btn btn-outline btn-primary">Create New</button></a>

{% endblock %}
