{% extends 'data.html.twig' %}

{% block body %}
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            {% form_theme tournoi 'bootstrap_4_layout.html.twig' %}

            {{ form_start(tournoi,{'attr':{'class':'card card-primary','novalidate':'novalidate'}}) }}
    <div class="card-header">
        <h3 class="card-title"> Modifier un Tournoi </h3>
    </div>
    <div class="card-body">
        <div class="form-group">
            {{ form_label(tournoi.nomtournoi,"Nom du tournoi",{'attr':{'class':'exampleInputEmail1'}}) }}
        </div>
        {{ form_widget(tournoi.nomtournoi,{'attr':{'class':'form-control'}}) }}
        <div class="form-group">
        </div>
        <div class="form-group">
            {{ form_label(tournoi.description,"description pour le tournoi:",{'attr':{'class':'exampleInputEmail1'}}) }}
        </div>
        {{ form_widget(tournoi.description,{'attr':{'class':'form-control'}})}}
        <div class="form-group">
        </div>
        <div class="form-group">
            {{ form_label(tournoi.jeu,"idJeu:",{'attr':{'class':'exampleInputEmail1'}}) }}
        </div>
        {{ form_widget(tournoi.jeu,{'attr':{'class':'form-control'}})}}


        <div class="form-group">
            {{ form_label(tournoi.datec,"Nom du tournoi",{'attr':{'class':'exampleInputEmail1'}}) }}
        </div>
        <div class="form-group">
        <div class="input-group date" id="reservationdate" data-target-input="nearest">
        {{ form_widget(tournoi.datec,{'attr':{'class':'form-control datetimepicker-input','type':'text','data-target':'#reservationdate'}}) }}
            <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
        </div>
        </div>
        <div class="form-group">
        </div>
        <div class="form-group">
            {{ form_label(tournoi.dateev,"description pour le tournoi:",{'attr':{'class':'exampleInputEmail1'}}) }}
        </div>
        {{ form_widget(tournoi.dateev,{'attr':{'class':'form-control'}})}}
        <div class="form-group">
        </div>
        <div class="form-group">
            {{ form_label(tournoi.heureev,"idJeu:",{'attr':{'class':'exampleInputEmail1'}}) }}
        </div>
        {{ form_widget(tournoi.heureev,{'attr':{'class':'form-control'}})}}
    </div>

    <div class="card-footer">
        {{ form_widget(tournoi.save,{'attr':{'class':'btn btn-primary'}})}}
    </div>

    </div></div>

    {{ form_end(tournoi,{'attr':{'class':'btn btn-primary'}}) }}
{% endblock %}
