{% extends 'back.html.twig' %}

{% block title %}LigneCommande index{% endblock %}

{% block content %}
    <h1>Ligne Commande</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>Nom Produit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ligne_commande in ligne_commandes %}
