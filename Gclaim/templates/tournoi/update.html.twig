{% extends 'data.html.twig' %}
{% block body %}
    {% form_theme tournoi 'bootstrap_4_layout.html.twig' %}
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            {{ form_start(tournoi,{'attr':{'class':'card card-primary','novalidate':'novalidate'}}) }}
            <div class="card-header">
                <h3 class="card-title"> Modifier un Tournoi </h3>
            </div>
            <div class="card-body">




                <div class="form-group">
                    {{ form_label(tournoi.nomtournoi,"Nom du tournoi",{'attr':{'class':'exampleInputEmail1'}}) }}
                </div>
                {{ form_widget(tournoi.nomtournoi,{'attr':{'class':'form-control'}}) }}
                <div class="form-group">
                </div>
                <div class="form-group">
                    {{ form_label(tournoi.description,"description pour le tournoi:",{'attr':{'class':'exampleInputEmail1'}}) }}
                </div>
                {{ form_widget(tournoi.description,{'attr':{'class':'form-control'}})}}
                <div class="form-group">
                </div>
                <div class="form-group">
                    {{ form_label(tournoi.image,"image:",{'attr':{'class':'exampleInputEmail1'}}) }}
                </div>
                {{ form_widget(tournoi.image,{'attr':{'class':'form-control'}})}}

                <div class="form-group">
                    {{ form_label(tournoi.jeu,"nom Jeu:",{'attr':{'class':'exampleInputEmail1'}}) }}
                </div>
                {{ form_widget(tournoi.jeu)}}


                <div class="form-group">
                    {{ form_label(tournoi.datec,"Date de Creation",{'attr':{'class':'exampleInputEmail1'}}) }}
                </div>
                <div class="input-group date" id="reservationdate" data-target-input="nearest">
                    {{ form_widget(tournoi.datec,{'attr':{'class':'datetimepicker-input'}}) }}
                    <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    {{ form_label(tournoi.dateev,"Date Evenement:",{'attr':{'class':'exampleInputEmail1'}}) }}
                </div>
                <div class="form-group">
                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                        {{ form_widget(tournoi.dateev,{'attr':{'class':'datetimepicker-input'}})}}
                        <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div></div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    {{ form_label(tournoi.heureev,"Heure evenement:",{'attr':{'class':'exampleInputEmail1'}}) }}
                </div>
                <div class="bootstrap-timepicker">
                    <div class="form-group">
                        <div class="input-group date" id="timepicker" data-target-input="nearest">
                            {{ form_widget(tournoi.heureev,{'attr':{'class':'datetimepicker-input'}})}}
                            <div class="input-group-append" data-target="#timepicker" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="far fa-clock"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                {{ form_widget(tournoi.save,{'attr':{'class':'btn btn-primary'}})}}
            </div>



            {{ form_end(tournoi,{'attr':{'class':'btn btn-primary'}}) }}
        </div></div>
{% endblock %}

