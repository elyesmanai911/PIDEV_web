{% extends 'back.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>id_produit</th>
                <td>{{ produit.id_produit }}</td>
            </tr>
            <tr>
                <th>Nom_produit</th>
                <td>{{ produit.nomProduit }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix_produit</th>
                <td>{{ produit.prixProduit }}</td>
            </tr>
            <tr>
                <th>DateAjout_produit</th>
                <td>{{ produit.dateAjoutProduit ? produit.dateAjoutProduit|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image_produit</th>
                <td>{{ produit.imageProduit }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('produit_edit', {'id_produit': produit.id_produit}) }}" class="btn btn-primary">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
