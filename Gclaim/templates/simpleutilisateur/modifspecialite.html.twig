

{% extends 'test.html.twig' %}
{% block title %}modifier coach{% endblock %}

{% block body %}
    <div style="background: #0d0909;
	position: fixed;
	left: 0;
	top: 0;
	height: 100%;
	width: 100%;
	overflow: auto;
	z-index: 99;
	color: white;
	border: 2px solid #c24400;

	">
        <div class="signup-close"><i class="fa fa-close"></i>
            <div class="signup-text">
                <div class="container">

                    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}},{'attr': {'class': 'signup-form'}}) }}
                    <div class="signup-title" >
                        <h2 style="color: #c24400">MODIFIER VOTRE SPECIALITE </h2>
                        <p>REMPLIR LE FORMULAIRE</p>
                        {{ error }}
                    </div>
                    <div class="section-title">
                        <h5>LOGIN :{{ user.username }}</h5>

                    </div>
                    <div class="section-title">
                        <h5>EMAIL: {{ user.email }}</h5>

                        <a ><span></span></a>
                    </div>
                    <div class="section-title">

                        <h5>ROLE :Coach </h5>
                       <br>
                        <div class="input-value">
                            {{ form_errors(form.specialite) }}
                            {{ form_widget(form.specialite,{'attr':{'placeholder':'NOM ET PRENOM*','style':'border-color: #c24400;background:transparent;width:120%;height: 46px;font-size: 14px;color: #c4c4c4;-webkit-transform: skewX(-15deg);-ms-transform: skewX(-15deg);margin-bottom: 30px;border-radius: 2px;
	                                  transform: skewX(-15deg);'}}) }}
                        </div>

                        {{ form_widget(form.confirmer,{'attr':{'style':'border-color: #c24400;background:#c24400;width:120%;height: 46px;font-size: 14px;color: #c4c4c4;-webkit-transform: skewX(-15deg);-ms-transform: skewX(-15deg);margin-bottom: 30px;border-radius: 2px;
	                              transform: skewX(-15deg);'}}) }}

                    </div>
                    {{ form_end(form) }}


                </div>
            </div>

        </div>
    </div>

{% endblock %}
