
{% extends 'test.html.twig' %}

{% block title %}Article index{% endblock %}

{% block part %}
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

    <section class="instagram-post-section spad">
        <div class="container">
            <div class="row">

                <div class="col-lg-8">
                    <div class="section-title">
                        <h5>ARTICLES</h5>
                    </div>
                    {% for article in articles %}

                        <div class="ip-item">
                            <div class="ip-pic">
                                <img style="width: 400px ; height: 400px" src="{{asset('img/article/') ~ article.image }}" alt="">
                            </div>
                            <div class="ip-text">
                                <div class="label">
                                    <h5><a href="{{ path('article_afficheA',{'id': article.id}) }}">savoir plus</a></h5>
                                </div>

                                <div class="section-title">

                                    <h5>{{ article.titre }}</h5>
                                </div>
                                <div class="stars">
                                    <i class="lar la-star" data-value="1"></i><i class="lar la-star" data-value="2"></i><i class="lar la-star" data-value="3"></i><i class="lar la-star" data-value="4"></i><i class="lar la-star" data-value="5"></i>
                                </div>
                                <input type="hidden" name="note" id="note" value="0">
                                <ul>
                                    <li>by <span>Admin</span></li>
                                    <li><i class="fa fa-clock-o"></i> {{ article.createAt ? article.createAt|date('Y-m-d H:i:s') : '' }}</li>

                                </ul>

                            </div>
                        </div>
                    {% endfor %}


                </div>
                <div class="col-lg-4 col-md-7">
                    <div class="sidebar-option">
                        <div class="insta-media">
                            <div class="section-title">
                                <h5>Categories</h5>
                            </div>

                            <div class="insta-pic">
                                {{ include('cat/affcat.html.twig') }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="pagination-item">
            {{ knp_pagination_render(articles) }}
        </div>
    </section>

    <script src="js/scripts.js"></script>


{% endblock %}
