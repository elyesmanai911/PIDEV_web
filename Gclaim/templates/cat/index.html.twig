{% extends 'back.html.twig' %}

{% block title %}Cat index{% endblock %}

{% block body %}
    <h1>Cat index</h1>

    <table class="table">
        <thead>
        <tr>

            <th>Nom</th>
            <th>Article</th>
            <th>actions</th>
        </tr>
        </thead>
        <body>
        {% for cat in cats %}
            <tr>
                <td>{{ cat.nom }}</td>
                <td>{{ cat.couleur }}</td>
                <td>
                    <a href="{{ path('cat_show', {'id': cat.id}) }}">show</a>
                    <a href="{{ path('cat_edit', {'id': cat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </body>
    </table>

    <a href="{{ path('cat_new') }}">Create new</a>
{% endblock %}
