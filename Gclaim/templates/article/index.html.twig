{% extends 'back.html.twig' %}

{% block title %}Article index{% endblock %}
{% block style %}
    <link rel="stylesheet" href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}">
{% endblock %}
{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Image</th>
                <th>CreateAt</th>
                <th>SUPPRIMER</th>
                <th>MODIFIER</th>
{#                <th>Commentaire</th>#}

            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.image }}</td>
                <td>{{ article.createAt ? article.createAt|date('Y-m-d H:i:s') : '' }}</td>
{#                <td>{{ article.commentaire }}</td>#}

                <td> <a href="{{ path('article_delete',{'id':article.id}) }}"class="btn btn-block btn-warning btn-sm">Delete</a></td>
                <td> <a href="{{ path('article_edit',{'id':article.id}) }}"class="btn btn-block btn-warning btn-sm">MODIFIER</a></td>


            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="pagination-item">
        {{ knp_pagination_render(articles) }}
    </div>
    {% block javas %}
        <script src="{{ asset('bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
        <script src="//code.jquery.com/jquery.js"></script>

    {% endblock %}
    {{ include('@MercurySeriesFlashy/flashy.html.twig') }}


{% endblock %}
