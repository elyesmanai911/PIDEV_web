{% extends 'back.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">LES RENDEZ_VOUS</h3>
                </div>
                <!-- ./card-header -->
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <td>Id</td>
                            <td>DATE</td>
                            <td>Coach Name</td>
                            <td>Client Name</td>

                            <td>SUPPRIMER</td>
                            <td>MODIFIER</td>

                        </tr>
                        </thead>
                        <tbody>
                        {% for s in rdv %}
                        {% if s.isVerified == 1 %}
                            <tr data-widget="expandable-table" aria-expanded="false">
