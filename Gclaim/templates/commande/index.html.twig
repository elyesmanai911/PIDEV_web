{% extends 'back.html.twig' %}

{% block title %}Commande{% endblock %}

{% block content %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
               
                <th>IdUser</th>
                <th>Total</th>
                <th>DateAchat</th>
                <th>Livrer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                
                <td>{{ commande.idUser }}</td>
                <td>{{ commande.total }}</td>
                <td>{{ commande.dateAchat ? commande.dateAchat|date('Y-m-d') : '' }}</td>
                <td>{{ commande.livrer ? 'Yes' : 'No' }}</td>
                <td>
                    <div>
                    <a href="{{ path('commande_show', {'id': commande.id}) }}">Details</a>
                    </div>
                    <div>
                    <a href="{{ path('commande_edit', {'id': commande.id}) }}">Status Update</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commande_new') }}">Create new</a>
{% endblock %}
