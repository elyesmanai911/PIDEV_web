                                <td>{{ s.date|date }}</td>
                                <td>{{ s.coach.username }}</td>
                                 <td>{{ s.user.username }}</td>
                                <td> <a href="{{ path('rdv_delete',{'id':s.id}) }} " class="btn btn-block btn-warning btn-sm">Delete</a></td>
                                <td> <a href="{{ path('rdv_edit',{'id':s.id}) }}" class="btn btn-block btn-warning btn-sm">Update</a></td>



                            </tr>
                        {% endif %}
                        {% endfor %}

                        </tbody>
                    </table>
                    <td>  <a href="{{ path('tri1') }}" class="btn btn-block btn-outline-warning btn-xs">tri√© les RDV</a></td>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
