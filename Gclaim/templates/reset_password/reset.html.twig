
{% extends 'test.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

    <div style="background: #0d0909;
	position: fixed;
	left: 0;
	top: 0;
	height: 100%;
	width: 100%;
	overflow: auto;
	z-index: 99;
	color: white;
	border: 2px solid #c24400;

	">

        <a href="{{ path("gclaim") }}" style="color:#c24400; ">ACCUEIL</a>

        <div class="signup-text">

            <div class="container">

                {{ form_start(resetForm) }}
                <div class="signup-title">
                    <h2>Réinitialisez votre mot de passe</h2>
                    <p>REMPLIR LE FORMULAIRE</p>
                </div>
                {{ form_widget(resetForm.plainPassword,{'attr':{'style':'border-color: #c24400;background:transparent;margin-right:100px;height: 46px;font-size: 14px;color: #c4c4c4;-webkit-transform: skewX(-15deg);-ms-transform: skewX(-15deg);margin-bottom: 30px;border-radius: 2px;
                                       	transform: skewX(-15deg);'}}) }}


                    <button class="btn btn-lg btn-primary" type="submit" style="background: #c24400">
                        Réinitialiser le mot de passe
                    </button>

                {{ form_end(resetForm) }}

            </div>

        </div>
    </div>
{% endblock %}
