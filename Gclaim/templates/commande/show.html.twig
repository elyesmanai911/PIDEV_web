{% extends 'back.html.twig' %}

{% block title %}Commande{% endblock %}

{% block content %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>IdUser</th>
                <td>{{ commande.idUser }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ commande.total }}</td>
            </tr>
            <tr>
                <th>DateAchat</th>
                <td>{{ commande.dateAchat ? commande.dateAchat|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Livrer</th>
                <td>{{ commande.livrer ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('commande_index') }}"><div> Back </div> </a>

    <a href="{{ path('commande_edit', {'id': commande.id}) }}"><div>Status Update </div></a>

    {{ include('commande/_delete_form.html.twig') }}
{% endblock %}
